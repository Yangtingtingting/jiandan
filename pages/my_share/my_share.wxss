/* pages/my_share/my_share.wxss */
.wrap {
    width: 100%;
}

page {
    background: #f5f5f5;
}

.bgimg {
    width: 100%;
}

.bgimg image {
    width: 100vw;
    height: 824rpx;
}

.sharecode {
    position: relative;
}

.sharetitle {
    position: absolute;
    margin: 0 auto;
    left: 50%;
    top: 58%;
    transform: translate(-50%, -50%);
}

.mycode {
    width: 306rpx;
    height: 306rpx;
    border: 1px solid #eeeeee;
}

.sharetitle view:first-child {
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 114rpx;
    color: #111111;
}

.sharetitle view:last-child {
    text-align: center;
    font-size: 28rpx;
    color: #AAAAAA;
    padding-top: 24rpx;
}

.myinvited {
    margin: 24rpx;
    background: #ffffff;
    height: 268rpx;
    background: #FFFFFF;
    box-shadow: -2px -2px 4px rgba(255, 81, 54, 0.16);
    border-radius: 24rpx;
    padding: 24rpx;
}

.inv_title image {
    width: 100%;
    height: 64rpx;
}

.inv_content {
    display: flex;
    justify-content: space-between;
    margin-top: 56rpx;
}

.inconleft {
    display: flex;
}

.leimage image {
    width: 96rpx;
    height: 96rpx;
}

.textpersom {
    font-size: 28rpx;
    font-weight: bold;
    line-height: 40rpx;
    color: #E4630D;
}

.textpersom span {
    font-size: 24rpx;
}

.textfriend {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #AAAAAA;
}

.letext {
    margin-left: 38rpx;
}

.myinlist {
    margin: 24rpx;
    padding: 24rpx;
    background: #fff;
    border-radius: 24rpx;
    box-sizing: border-box;
}
.listtitle{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 56rpx;
    padding-right: 56rpx;
}
.listtitle view{
    font-size: 28rpx;
    line-height: 40rpx;
    color: #AAAAAA;
}
.myinitemm{
    display: flex;
    position: relative;
}
.myinitemm view{
    width: 33.33%;
    font-size: 32rpx;
    text-align: center;
    line-height: 76rpx;
    color: #111111;
}
.myinitemm view:nth-child(3){
    font-weight: bold;
    color: #E4630D;
}
.myinitemm view span{
    position: absolute;
    font-size: 24rpx;
    top: 0;
    left: 8rpx;
    font-weight: bold;
}
.btnshare{
    margin-bottom: 24rpx;
}
.btnshare button{
    width: 93.6vw;
    margin: 0 auto;
    background: #FFCF08;
    border-radius: 44rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #111111;
}
.btnshare button::after{
    border: none;
}