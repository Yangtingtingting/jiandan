/* pages/my_wallet/my_wallet.wxss */
.wrap {
    width: 100%;
}

page {
    background: #f5f5f5;
}

.wal_head {
    width: 100%;
    background: #FFCF08;
    height: 474rpx;
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
    position: relative;
    box-sizing: border-box;
}

.headcontent {
    position: absolute;
    background: #fff;
    width: 93.6vw;
    left: 24rpx;
    top: 44rpx;
    padding: 24rpx;
    padding-top: 44rpx;
    border-radius: 16rpx;
    box-sizing: border-box;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
}

.headcontent view:first-child {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 40rpx;
    color: #333333;
}

.headcontent view:first-child span {
    color: #E4630D;
}

.txplace {
    font-size: 28rpx;
    color: #AAAAAA;
    line-height: 88rpx;
}

.txinput {
    margin-top: 24rpx;
}

.txinput input {
    height: 88rpx;
    line-height: 88rpx;
    color: #111111;
    border-bottom: 1px solid #eeeeee;
    font-size: 48rpx;
    font-weight: bold;
    line-height: 66rpx;
}

.errword {
    font-size: 20rpx;
    font-weight: bold;
    line-height: 60rpx;
    color: #FF4E36;
}

.btngroup button {
    border-radius: 44rpx;
}

.btngroup {
    margin-top: 96rpx;
    margin-bottom: 24rpx;
}

.btngroup button::after {
    border: none;
}

.showbtn {
    background: #FFCF08;
    font-weight: bold;
    color: #111111;
}

.nonebtn {
    font-size: 36rpx;
    color: #AAAAAA;
}
.walletlist{
    background: #ffffff;
    padding: 24rpx;
    width: 93.8vw;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 24rpx;
    margin-top: 24rpx;
}
.walletcontent{
    display: flex;
    justify-content: space-between;
}
.wallleft{
    display: flex;
    height: 72rpx;
    align-items: center;
}
.walltext{
    margin-left: 30rpx;
}
.wallimgbox image{
    width: 60rpx;
    height: 60rpx;
}
.walltext view:first-child{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}
.walltext view:last-child{
    font-size: 24rpx;
    line-height: 42rpx;
    color: #AAAAAA;
}
.wallright{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}
.wallitem{
    margin-top: 40rpx;
}