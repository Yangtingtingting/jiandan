/* pages/mypersonal/mypersonal.wxss */
page{
    background: #f5f5f5;
}
.wrap{
    width: 100%;
}

.personhead{
    display: flex;
    justify-content: flex-start;
    padding: 48rpx;
    background: #FFCF08;
    border-radius: 0 0 32rpx 32rpx;
}
.headpic image{
    width: 144rpx;
    height: 144rpx;
    border-radius: 50%;
}
.persontext{
    padding-left: 28rpx;
    line-height: 40rpx;
    padding-top: 20rpx;
}
.per_name{
    font-size: 36rpx;
    font-weight: bold;
    line-height: 50rpx;
    color: #111111;
}
.per_id{
font-size: 28rpx;
font-weight: bold;
line-height: 40px;
color: #111111;
opacity: 0.4;
}
.percontent{
    padding: 24rpx;
}
.personadver{
    display: flex;
    justify-content: space-between;
}
.per_ban image{
    width: 338rpx;
    height: 196rpx;
}
.per_ban{
    position: relative;
}
.per_resume{
    position: absolute;
    color: #fff;
    bottom: 0rpx;
    padding-left: 24rpx;
    padding-bottom: 32rpx;
}
.per_resume span{
    font-size: 48rpx;
}
.adverbanner image{
    width: 100%;
    height: 172rpx;
}
.adverbanner{
    margin-bottom: 16rpx;
}
.partrecord{
    font-size: 28rpx;
    line-height: 88rpx;
    color: #111111;
    position: relative;
    background: #fff;
    padding-left: 88rpx;
    border-radius: 8rpx;
    margin-top: 24rpx;
    background-image: url("data:image/png;base64,");
    background-size: 40rpx;
    background-repeat: no-repeat;
    background-position:94% 24rpx;
}
.partrecord image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 24rpx;
    top: 24rpx;
}
.copyright{
    position: fixed;
    bottom: 10rpx;
    font-size: 24rpx;
    color: #999;
    left: 306rpx;
}
.copyright view{
    color: #999;
    width: 160rpx;
    margin: 0 auto;
}