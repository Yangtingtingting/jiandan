/* pages/partrecord/partrecord.wxss */
page {
    background-color: #f5f5f5;
}

.peritem {
    padding: 24rpx;
    background: #fff;
    border-radius: 12rpx;
    margin-top: 24rpx;
    padding-top: 0px;
}

.itemtop {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #EEEEEE;
}

.itemcenter {
    display: flex;
    justify-content: space-between;

    margin-top: 24rpx;
}

.itemtime {
    font-size: 28rpx;
    line-height: 80rpx;
    color: #AAAAAA;
}

.itembtn {
    border-radius: 8rpx;
    height: 52rpx;
    line-height: 50rpx;
    padding: 1px 20rpx;
    font-size: 24rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.perbtned {
    background: rgba(23, 180, 86, 0.4);
    color: #17B456;
}

.perbtning {
    background: rgba(228, 99, 13, 0.4);
    color: rgba(228, 99, 13, 1);
}

.perbtns {
    background: rgba(170, 170, 170, 0.4);
    color: rgba(170, 170, 170, 1);
}

.perbtnill {
    background: rgba(255, 207, 8, 0.4);
    color: rgba(255, 207, 8, 1);
}

.outbox {
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.itemtitle {
    font-size: 36rpx;
    font-weight: bold;
    color: #111111;
}

.itemsalsry {
    font-size: 36rpx;
    font-weight: bold;
    color: #E4630D;
}

.peradress {
    font-size: 28rpx;
    line-height: 56rpx;
    color: #555555;
    margin-top: 16rpx;
    padding-left: 40rpx;
    background-image: url("data:image/png;base64,");
    background-size: 32rpx;
    background-repeat: no-repeat;
    /* X,Y(left,right) */
    background-position: 0px 15rpx;
}
.loadmore{
    line-height: 120rpx;
    text-align: center;
    font-size: 28rpx;
    color: #555555;
}