/* pages/salarypage/salarypage.wxss */
.wrap {
    width: 100%;
}

page {
    background: #f5f5f5;
}

.luckydraw {
    width: 100vw;
    height: 710rpx;
    box-sizing: border-box;
    position: relative;
    background: rgb(228 35 63);
}

.drawimgbox {
    position: absolute;
    top: 0px;
    left: 0px;
}

.drawimgbox image {
    width: 100vw;
    height: 710rpx;
}

.integralbox {
    position: absolute;
    width: 93.6%;
    box-sizing: border-box;
    height: 192rpx;
    background: #FFCF08;
    top: 600rpx;
    left: 24rpx;
    display: flex;
    padding: 24rpx;
    justify-content: space-between;
    border-radius: 24rpx 24rpx 0px 0px;
}

.integraleft {
    display: flex;
    justify-content: center;
    align-items: center;
}

.integraleft image {
    width: 96rpx;
    height: 96rpx;
}

.integraleft view {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
    margin-left: 16rpx;
}

.integraright {
    background: #FF4E36;
    border-radius: 32rpx;
    font-size: 24rpx;
    line-height: 62rpx;
    height: 62rpx;
    color: #FFFFFF;
    padding: 0px 50rpx;
    align-items: center;
    margin-top: 56rpx;
}

.walletlist {
    background: #ffffff;
    padding: 24rpx;
    width: 93.8vw;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 24rpx;
    margin-top: 114rpx;
    margin-bottom: 24rpx;
}

.walletcontent {
    display: flex;
    justify-content: space-between;
}

.wallleft {
    display: flex;
    height: 72rpx;
    align-items: center;
}

.walltext {
    margin-left: 30rpx;
}

.wallimgbox image {
    width: 60rpx;
    height: 60rpx;
}

.walltext view:first-child {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}

.walltext view:last-child {
    font-size: 24rpx;
    line-height: 42rpx;
    color: #AAAAAA;
}

.wallright {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}

.wallitem {
    margin-top: 40rpx;
}

/* 转盘 */
.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100rpx;
}

/* 转盘 */
.canvas-container {
    margin: 0 auto;
    position: relative;
    width: 534rpx;
    height: 534rpx;
    border-radius: 50%;
    /* box-shadow: 0 10rpx 30rpx #333, 0 0 10rpx #000;   */
    /* border: 10rpx solid #A83FDB;   */
}

.canvas-content {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    display: block;
    width: 534rpx;
    height: 534rpx;
    border-radius: inherit;
    background-clip: padding-box;
    /* background-color: #ffcb3f; */
}

.canvas-element {
    position: relative;
    z-index: 1;
    width: inherit;
    height: inherit;
    border-radius: 50%;
}

.canvas-list {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
    z-index: 9999;
}

.canvas-item {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    color: #e4370e;
    font-weight: bold;
    text-shadow: 0 1rpx 1rpx rgba(255, 255, 255, 0.6);
}

/* .canvas-item:nth-child(2n){  
    background: purple;
  }  */
.canvas-item-text {
    position: relative;
    display: block;
    padding-top: 92rpx;
    margin: 0 auto;
    text-align: center;
    -webkit-transform-origin: 50% 263rpx;
    transform-origin: 50% 263rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.canvas-item-text text {
    font-size: 24rpx;
    font-weight: bold;
    color: #FF4E36;
}

.canvas-item-text-img {
    width: 200rpx;
    height: 222rpx;
    padding-top: 10rpx;
}

/* 分隔线 */
.canvas-line {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
    z-index: 99;
}

.canvas-litem {
    position: absolute;
    left: 300rpx;
    top: 0;
    width: 3rpx;
    height: 300rpx;
    /* background-color: rgba(228, 55, 14, 0.4);   */
    overflow: hidden;
    -webkit-transform-origin: 50% 300rpx;
    transform-origin: 50% 300rpx;
}

