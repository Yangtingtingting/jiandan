/* pages/salarypage/salarypage.wxss */
.wrap{
    width: 100%;
}
page{
    background: #f5f5f5;
}
.luckydraw{
    width: 100%;
    height: 710rpx;
    box-sizing: border-box;
    position: relative;
}
.drawimgbox{
    position: absolute;
    top: 0px;
    left: 0px;
}
.drawimgbox image{
    width: 100vw;
    height: 710rpx;
}
.integralbox{
    position: absolute;
    width: 93.6%;
    box-sizing: border-box;
    height: 192rpx;
    background: #FFCF08;
    top: 572rpx;
    left: 24rpx;
    display: flex;
    padding: 24rpx;
    justify-content: space-between;
    border-radius: 24rpx 24rpx 0px 0px;
}
.integraleft{
    display: flex;
    justify-content: center;
    align-items: center;
}
.integraleft image{
    width: 96rpx;
    height: 96rpx;
}
.integraleft view{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
    margin-left: 16rpx;
}
.integraright{
    background: #FF4E36;
    border-radius: 32rpx;
    font-size: 24rpx;
    line-height: 62rpx;
    height: 62rpx;
    color: #FFFFFF;
    padding: 0px 50rpx;
    align-items: center;
    margin-top:56rpx ;
}
.walletlist{
    background: #ffffff;
    padding: 24rpx;
    width: 93.8vw;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 24rpx;
    margin-top: 94rpx;
    margin-bottom: 24rpx;
}
.walletcontent{
    display: flex;
    justify-content: space-between;
}
.wallleft{
    display: flex;
    height: 72rpx;
    align-items: center;
}
.walltext{
    margin-left: 30rpx;
}
.wallimgbox image{
    width: 60rpx;
    height: 60rpx;
}
.walltext view:first-child{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}
.walltext view:last-child{
    font-size: 24rpx;
    line-height: 42rpx;
    color: #AAAAAA;
}
.wallright{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 42rpx;
    color: #111111;
}
.wallitem{
    margin-top: 40rpx;
}
/* 转盘 */
#luckdraw_box{ 
    width:620rpx;
     height:620rpx; 
     margin:0 auto;
     position:relative; 
  }
  
  #luckdraw_back{
    width: 100%;
    height: 100%;
  }   
  
  #luckdraw_back image{
    display: block;
    width: 100%;
    height: 100%;
    transform-origin:center center;
  }
  
  #luckdraw_pointer{ 
      width:174rpx;
      height:228rpx;
      position:absolute;
      left:226.5rpx;
      z-index:999; 
      top:195.5rpx;
  }
  
  #luckdraw_pointer image{
    display: block;
    width: 100%;
    height: 100%;
  }